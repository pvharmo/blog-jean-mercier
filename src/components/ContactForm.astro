<form name="contact" method="POST" data-netlify="true">
  <!-- Name -->
  <div class="field">
    <label for="name" class="label is-medium">Name</label>
    <div class="control has-icons-left">
      <input
        name="name"
        class="input is-medium"
        type="text"
        placeholder="John Smith"
      />
      <span class="icon is-small is-left">
        <font-awesome-icon icon="user" />
      </span>
    </div>
  </div>
  <!-- Email -->
  <div class="field">
    <label for="email" class="label is-medium">Email</label>
    <div class="control has-icons-left">
      <input
        name="email"
        class="input is-medium"
        type="email"
        placeholder="you@email.com"
      />
      <span class="icon is-small is-left">
        <font-awesome-icon icon="envelope" />
      </span>
    </div>
  </div>
  <!-- Subject -->
  <div class="field">
    <label for="subject" class="label is-medium">Subject</label>
    <div class="control has-icons-left">
      <input
        name="subject"
        class="input is-medium"
        type="text"
        placeholder="Brief Summary"
      />
      <span class="icon is-small is-left">
        <font-awesome-icon icon="briefcase" />
      </span>
    </div>
  </div>
  <!-- Message -->
  <div class="field">
    <label for="message" class="label is-medium">Message</label>
    <div class="control">
      <textarea
        name="message"
        class="textarea"
        placeholder="Detailed description of your comment, request, etc"
        rows="8"
      />
    </div>
  </div>
  <div class="control">
    <button class="button is-primary"> Contact Us </button>
  </div>
</form>
