---
const {url, postName} = Astro.props
---

<div id="disqus_thread"></div>
<script is:inline define:vars={{ url, postName }}>
  var disqus_config = function () {
    this.page.url = {url};  // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = {postName}; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
  };
  (function() { // DON'T EDIT BELOW THIS LINE
  var d = document, s = d.createElement('script');
  s.src = 'https://themovieshrink.disqus.com/embed.js';
  s.setAttribute('data-timestamp', +new Date());
  (d.head || d.body).appendChild(s);
  })();
</script>